---
import { execSync } from 'node:child_process';

let commit = 'unknown';
try {
	commit = execSync('git rev-parse --short HEAD').toString().trim();
} catch (err) {
	// fallback to unknown if git info unavailable
}
const commitUrl = `https://github.com/httpparam/site-v1/commit/${commit}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;600&display=swap"
			rel="stylesheet"
		/>
		<title>Personal Site</title>
	</head>
	<body>
		<div id="app-shell">
			<slot />
		</div>
		<footer class="tiny-footer">
			on commit <a href={commitUrl} target="_blank" rel="noreferrer">{commit}</a>, made with astro
		</footer>
	</body>
</html>

<style>
	:root {
		/* Catppuccin Mocha */
		--ctp-base: #1e1e2e;
		--ctp-mantle: #181825;
		--ctp-surface: #313244;
		--ctp-text: #cdd6f4;
		--ctp-subtle: #a6adc8;
		--ctp-accent: #cba6f7;
		--ctp-peach: #fab387;
		--ctp-green: #a6e3a1;
		--radius-lg: 18px;
		--radius-md: 12px;
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		height: 100%;
		background: radial-gradient(circle at 20% 20%, #1e1e2e, #181825 40%, #0f0f17);
		color: var(--ctp-text);
		font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', sans-serif;
		letter-spacing: -0.01em;
		overflow: hidden;
	}

	body {
		position: relative;
		background-attachment: fixed;
	}

	body::before {
		content: '';
		position: fixed;
		inset: -80px;
		z-index: 0;
		background-image:
			radial-gradient(circle at 15% 20%, rgba(108, 112, 134, 0.18), transparent 30%),
			radial-gradient(circle at 80% 25%, rgba(203, 166, 247, 0.18), transparent 30%),
			radial-gradient(circle at 70% 70%, rgba(137, 180, 250, 0.18), transparent 32%),
			linear-gradient(120deg, #0f0f17 0%, #181825 45%, #11111a 70%, #0b0b13 100%);
		filter: saturate(1.1);
		pointer-events: none;
	}

	body::after {
		content: '';
		position: fixed;
		inset: 0;
		z-index: 0;
		pointer-events: none;
		background-image:
			repeating-linear-gradient(
				90deg,
				rgba(255, 255, 255, 0.08) 0,
				rgba(255, 255, 255, 0.08) 1px,
				transparent 1px,
				transparent 120px
			),
			repeating-linear-gradient(
				0deg,
				rgba(255, 255, 255, 0.08) 0,
				rgba(255, 255, 255, 0.08) 1px,
				transparent 1px,
				transparent 120px
			);
		mask-image: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.65), transparent 75%);
		opacity: 0.8;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	main {
		max-width: 1000px;
		margin: 0 auto;
		padding: 0;
		height: 100%;
	}

	#app-shell {
		position: relative;
		z-index: 1;
		min-height: 100vh;
	}

	.mono {
		font-family: 'JetBrains Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
			'Liberation Mono', 'Courier New', monospace;
	}

	.card {
		background: rgba(49, 50, 68, 0.6);
		border: 1px solid rgba(203, 166, 247, 0.15);
		border-radius: var(--radius-lg);
		box-shadow:
			0 20px 60px rgba(0, 0, 0, 0.35),
			inset 0 1px 0 rgba(255, 255, 255, 0.02);
		backdrop-filter: blur(12px);
	}

	.tag {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 8px 12px;
		border-radius: 999px;
		background: rgba(203, 166, 247, 0.12);
		color: var(--ctp-accent);
		font-weight: 600;
		font-size: 0.9rem;
	}

	.tiny-footer {
		position: fixed;
		left: 0;
		right: 0;
		bottom: 12px;
		text-align: center;
		font-size: 11px;
		font-style: italic;
		color: rgba(205, 214, 244, 0.7);
		pointer-events: auto;
		z-index: 2;
	}

	.tiny-footer a {
		color: inherit;
		pointer-events: auto;
		text-decoration: underline;
	}
</style>
